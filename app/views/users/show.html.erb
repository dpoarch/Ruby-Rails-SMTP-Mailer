<div class="container">
	<div class="row">
		<div class="col-lg-4 offset-lg-4">
			<h2 style="margin-top: 40px;">User Details</h2>
			<p id="notice"><%= notice %></p>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 offset-lg-4">
		<p>
		  <strong>Name:</strong>
		  <%= @user.name %>
		</p>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 offset-lg-4">
		<p>
		  <strong>Email:</strong>
		  <%= @user.email %>
		</p>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 offset-lg-4">
			<p>
			  <strong>Login:</strong>
			  <%= @user.login %>
			</p>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 offset-lg-4">
			<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning ' %>
			<%= link_to 'Back', users_path, class: 'btn btn-secondary ' %>
		</div>
	</div>
</div>
